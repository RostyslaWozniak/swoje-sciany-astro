---
import { Navigation } from "@components/Navigation";
import { cn } from "@utils/cn";
import { IS_LOCAL_PROJECT, IS_DEMO_PROJECT } from "@utils/env";
---

<header
  class={cn(
    "fixed top-0 z-50 h-16 w-screen bg-card/30 shadow-md backdrop-blur",
    {
      "top-10": IS_LOCAL_PROJECT || IS_DEMO_PROJECT,
    }
  )}
>
  <div
    class="mx-auto flex h-full max-w-[1200px] items-center justify-between px-2.5 sm:px-5"
  >
    <a href="/" aria-label="Go home">
      <img src="/logo.svg" alt="firmowe logo" class="w-16 md:w-20" />
    </a>
    <Navigation client:only="react" />
  </div>
</header>
