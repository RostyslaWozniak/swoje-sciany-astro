---
import MainHead from "@layouts/MainHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { Cookies } from "@components/Cookies";

const {
  title = "Swoje Ściany",
  description = "Profesjonalne remonty mieszkań, domów i obiektów komercyjnych.",
  className,
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <MainHead {title} {description} />
  <body
    class="flex min-h-screen flex-col overflow-x-hidden bg-background text-foreground"
  >
    <Header />
    <main
      class:list={[
        "flex grow flex-col overflow-x-hidden tracking-wide",
        className,
      ]}
    >
      <slot />
      <Cookies client:load />
    </main>
    <Footer />
  </body>
</html>
